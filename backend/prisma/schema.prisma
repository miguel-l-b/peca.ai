generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Country {
  id        Int       @id @default(autoincrement())
  name      String
  deleted   Boolean   @default(false)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Brand     Brand[]
}

model Brand {
  id        Int       @id @default(autoincrement())
  name      String
  imageUrl  String
  country   Country   @relation(fields: [countryId], references: [id])
  countryId Int
  foundedAt DateTime
  deleted   Boolean   @default(false)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Vehicle   Vehicle[]
  Part      Part[]
}

model vehicleType {
  id        Int       @id @default(autoincrement())
  name      String
  deleted   Boolean   @default(false)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Vehicle   Vehicle[]
}

model Part {
  id          BigInt        @id @default(autoincrement())
  name        String
  barcode     String        @unique
  price       Float
  stock       Int?
  imageUrl    String
  brand       Brand         @relation(fields: [brandId], references: [id])
  brandId     Int
  deleted     Boolean       @default(false)
  deletedAt   DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  PartVehicle PartVehicle[]
}

model PartVehicle {
  id        BigInt    @id @default(autoincrement())
  part      Part      @relation(fields: [partId], references: [id])
  partId    BigInt
  vehicle   Vehicle   @relation(fields: [vehicleId], references: [id])
  vehicleId BigInt
  deleted   Boolean   @default(false)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Vehicle {
  id            BigInt        @id @default(autoincrement())
  name          String
  brand         Brand         @relation(fields: [brandId], references: [id])
  brandId       Int
  vehicleType   vehicleType   @relation(fields: [vehicleTypeId], references: [id])
  vehicleTypeId Int
  year          Int
  fabricatedAt  DateTime
  imageUrl      String
  deleted       Boolean       @default(false)
  deletedAt     DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  PartVehicle   PartVehicle[]
}
